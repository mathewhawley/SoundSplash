.form-area
  %h3= "Edit '#{@track.name}'"

  = form_for @track do |f|
  
    .field
      %p= f.label :name
      %p= f.text_field :name
    
    .field
      %p= f.label :track
      %p= f.file_field :track

    .field
      %p= f.label :track_image
      %p= f.file_field :track_image
    
    .actions
      %p= f.submit 'Update Track', :class => 'button radius'