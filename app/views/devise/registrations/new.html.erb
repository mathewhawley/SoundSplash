<div class="form-area">
  <h3>Sign up</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %>
    </div>

    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email %>
    </div>

    <div class="field">
      <%= f.label :profile_picture %><br />
      <%= f.file_field :profile_picture %>
    </div>

    <div class="field">
      <%= f.label :about %><br />
      <%= f.text_area :about, :class => "about-text" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @validatable %>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :placeholder => "#{@minimum_password_length} characters minimum" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "#{@minimum_password_length} characters minimum" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", :class => 'button radius' %>
    </div>
  <% end %>
</div>