<header>
  <h1><%= link_to 'SoundSplash', root_path %></h1>
  <ul>
    <% if user_signed_in? %>
      <li>Logged in as <%= link_to current_user.username, user_path(current_user) %> | <%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
      <li><%= link_to('My Profile', user_path(current_user)) %></li>
      <li><%= link_to 'Upload Track', new_track_path %></li>
    <% else %>
      <li><%= link_to('Login', new_user_session_path) %></li>
      <li><%= link_to('Register', new_user_registration_path)  %></li>
    <% end %>
  </ul>
</header>