%header.sticky
  %nav.top-bar{ 'data-topbar' => '', role: 'navigation' }
    %ul.title-area
      %li.name
        %h1= link_to 'SoundSplash', root_path
    
    %section.top-bar-section
      %ul.right
        %li.has-dropdown
          - if user_signed_in?
            = link_to "Logged in as #{current_user.username}"
            %ul.dropdown
            %li= link_to 'Logout', destroy_user_session_path, :method => :delete
            %li.active= link_to 'My Profile', user_path(current_user)
          - else
            = link_to "Login/Register"
            %ul.dropdown
              %li= link_to('Login', new_user_session_path)
              %li.active= link_to('Register', new_user_registration_path)
        %li.active= link_to 'Upload Track', new_track_path